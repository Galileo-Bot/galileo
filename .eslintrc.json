{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"prefer-arrow-callback": ["error"],
		"quotes": ["error", "single", {"avoidEscape": true}],
		"semi": ["error", "always"],
		"sort-keys": ["error"]
	}
}
