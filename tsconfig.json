{
	"compilerOptions": {
		"esModuleInterop": true,
		"module": "commonjs",
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "ES2020"
	},
	"exclude": ["node_modules"],
	"files": ["index.d.ts"],
	"ts-node": {
		"compilerOptions": {
			"types": ["node", "figlet", "node-fetch", "enmap"]
		}
	},
	"typeAcquisition": {
		"enable": true
	}
}
